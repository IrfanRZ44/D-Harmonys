<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_rl_putih"
    android:elevation="3dp"
    android:padding="@dimen/margin_standard"
    android:layout_margin="@dimen/margin_small"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Video : "
        android:textColor="@color/hitam"
        android:textSize="@dimen/text_font"
        android:id="@+id/text_nama"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Url Video       : "
        android:layout_below="@+id/text_nama"
        android:textColor="@color/hitam"
        android:id="@+id/text_url"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_nama"
        android:textColor="@color/hitam"
        android:textSize="@dimen/text_font"
        android:id="@+id/nama"
        android:maxLines="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nama"
        android:layout_toRightOf="@+id/text_url"
        android:textColor="@color/hitam"
        android:textSize="@dimen/text_font"
        android:id="@+id/url"
        />


</RelativeLayout>